{
   "apiVersion": "flux.weave.works/v1beta1",
   "kind": "HelmRelease",
   "metadata": {
      "annotations": {
         "flux.weave.works/automated": "false"
      },
      "labels": {
         "name": "gloo"
      },
      "name": "gloo",
      "namespace": "gloo-system"
   },
   "spec": {
      "chart": {
         "name": "gloo",
         "repository": "https://storage.googleapis.com/solo-public-helm/",
         "version": "0.18.16"
      },
      "releaseName": "gloo-system-gloo",
      "values": {
         "crds": {
            "create": false
         },
         "discovery": {
            "fdsMode": "WHITELIST"
         },
         "gatewayProxies": {
            "gatewayProxyV2": {
               "group": {
                  "extraAnnotations": {
                     "external-dns.alpha.kubernetes.io/alias": true,
                     "external-dns.alpha.kubernetes.io/hostname": "",
                     "group.beta.kubernetes.io/aws-load-balancer-additional-resource-tags": "cluster:shared",
                     "group.beta.kubernetes.io/aws-load-balancer-type": "nlb"
                  }
               }
            }
         },
         "settings": {
            "create": true
         }
      }
   }
}
