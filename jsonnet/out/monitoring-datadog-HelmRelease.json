{
   "apiVersion": "flux.weave.works/v1beta1",
   "kind": "HelmRelease",
   "metadata": {
      "annotations": {
         "flux.weave.works/automated": "false"
      },
      "labels": {
         "name": "datadog"
      },
      "name": "datadog",
      "namespace": "monitoring"
   },
   "spec": {
      "chart": {
         "name": "datadog",
         "repository": "https://kubernetes-charts.storage.googleapis.com/",
         "version": "1.32.2"
      },
      "releaseName": "monitoring-datadog",
      "values": {
         "clusterAgent": {
            "enabled": true,
            "metricsProvider": {
               "enabled": true
            }
         },
         "datadog": {
            "apiKeyExistingSecret": "datadog",
            "appKeyExistingSecret": "datadog",
            "clusterName": "shared",
            "logLevel": "debug",
            "tokenExistingSecret": "datadog"
         },
         "kubeStateMetrics": {
            "enabled": true
         }
      }
   }
}
