{
   "apiVersion": "certmanager.k8s.io/v1alpha1",
   "kind": "ClusterIssuer",
   "metadata": {
      "name": "letsencrypt-production",
      "namespace": "certmanager"
   },
   "spec": {
      "acme": {
         "email": "derrick@tidepool.org",
         "privateKeySecretRef": {
            "name": "letsencrypt-production"
         },
         "server": "https://acme-v02.api.letsencrypt.org/directory",
         "solvers": [
            {
               "dns01": {
                  "route53": {
                     "region": "us-west-2"
                  }
               }
            }
         ]
      }
   }
}
