#!/bin/bash
set -o errexit -o pipefail -o noclobber -o nounset

if [ -z ${DEV_REPO+x} ]
then
	echo "Must set \$DEV_REPO in environment"
	exit
fi
	
if [ -z ${TIDEPOOL_AWS_ACCOUNT} ]
then
	echo "Must set \$TIDEPOOL_AWS_ACCOUNT in environment"
	exit
fi

TIDEPOOL_ENVIRONMENT=${1:-${TIDEPOOL_ENVIRONMENT:-""}}
CLUSTER_NAME=${2:-${CLUSTER_NAME:-""}}

bad=0
if [ "$CLUSTER_NAME" == "" ]
then
	echo "missing cluster name"
	bad=1
fi

if [ "$TIDEPOOL_ENVIRONMENT" == "" ]
then
	echo "missing cluster name"
	bad=1
fi

if [ $bad -eq 1 ]
then
	echo "usage: env_roles \${TIDEPOOL_ENVIRONMENT} \${CLUSTER_NAME}"
	exit 1
fi

BUCKET_NAME=${3:-tidepool-${TIDEPOOL_ENVIRONMENT}-data}
AWS_REGION=${3:-${AWS_REGION:-us-west-2}}

CF_FILE=file://${DEV_REPO}/cf/env-roles.yaml
STACK_NAME=eksctl-${CLUSTER_NAME}-${TIDEPOOL_ENVIRONMENT}-roles

set -x
aws cloudformation create-stack --stack-name ${STACK_NAME} --capabilities CAPABILITY_NAMED_IAM --template-body ${CF_FILE} --parameters ParameterKey=ClusterName,ParameterValue=${CLUSTER_NAME}  ParameterKey=EnvName,ParameterValue=${TIDEPOOL_ENVIRONMENT}   ParameterKey=ClusterRoleStackName,ParameterValue=eksctl-${CLUSTER_NAME}-roles ParameterKey=Region,ParameterValue=${AWS_REGION} ParameterKey=AccountNumber,ParameterValue=${TIDEPOOL_AWS_ACCOUNT} ParameterKey=BucketName,ParameterValue=${BUCKET_NAME}
