#!/bin/bash

mappings | replace_ports | gloo_manifests http | single_file "# Auto-generated file by gloo-gateway. Do not edit.
{{ if and (eq .Values.gateway.name \"gloo\") (.Values.http.enabled) }}" "{{ end }}" > "gloo-http.yaml"

mappings | replace_ports | gloo_manifests https | single_file "# Auto-generated file by gloo-gateway. Do not edit.
{{ if and (eq .Values.gateway.name \"gloo\") (.Values.https.enabled) }}" "{{ end }}" > "gloo-https.yaml"
