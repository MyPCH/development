#!/bin/bash
#
# Copy Tidepool S3 email assets to environment 
#
# Usage: $0

VALUES_FILE=${1:-values.yaml}

export ENVIRONMENTS=$(yq r $VALUES_FILE env | grep -v ' .*' | sed 's/.$//' | | paste -sd " " -)

for ENVIRONMENT in ${ENVIRONMENTS}
do
  # create login assets
  aws s3 mb s3://tidepool-${ENVIRONMENT}-asset
  aws s3 cp s3://tidepool-dev-asset s3://tidepool-${ENVIRONMENT}-asset
done

