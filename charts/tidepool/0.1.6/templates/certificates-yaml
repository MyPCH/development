{{ if .Values.global.certificates }}
{{ $release := .Release.Namespace }}
---
apiVersion: certmanager.k8s.io/v1alpha1
kind: Issuer
metadata:
  name: letsencrypt-staging
  namespace: {{ $release }}
spec:
  acme:
    server: https://acme-staging-v02.api.letsencrypt.org/directory
    email: {{ .Values.global.email | quote }}
    privateKeySecretRef:
      name: letsencrypt-staging
    solvers:
    - dns01:
       route53:
         region: {{ .Values.global.awsRegion | quote }}
---
apiVersion: certmanager.k8s.io/v1alpha1
kind: Issuer
metadata:
  name: letsencrypt-production
  namespace: {{ $release }}
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: {{ .Values.global.email | quote }}
    privateKeySecretRef:
      name: letsencrypt-production
    solvers:
    - dns01:
       route53:
         region: {{ .Values.global.awsRegion | quote }}
---
{{- range $spec := .Values.global.certificates }}
--- #file: {{ $spec.secretName }}-cert.yaml
apiVersion: certmanager.k8s.io/v1alpha1
kind: Certificate
metadata:
  name: {{ $spec.secretName }}
  namespace: {{ $release }}
spec:
  secretName: {{ $spec.secretName }}
  issuerRef:
    name: letsencrypt-{{ if $spec.production }}production{{ else }}staging{{ end }}
    kind: Issuer
  commonName: {{ $spec.commonName | quote }}
  dnsNames:
{{- if $spec.dnsNames -}}
  {{- $spec.dnsNames | toYaml | nindent 2 -}}
{{- else }}
  - {{ $spec.commonName | quote }}
{{- end }}
  acme:
    config:
    - dns01:
        provider: route53
      domains:
{{- if $spec.domains -}}
      {{- $spec.domains | toYaml | nindent 6 -}}
{{- else }}
      - {{ $spec.commonName | quote }}
{{- end }}
{{ end }}
{{ end }}
