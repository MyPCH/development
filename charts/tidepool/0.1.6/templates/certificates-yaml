{{ if .Values.global.certificateIssuer }}
{{ $release := .Release.Namespace }}
---
apiVersion: certmanager.k8s.io/v1alpha1
kind: Issuer
metadata:
  name: letsencrypt-staging
  namespace: {{ $release }}
spec:
  acme:
    server: https://acme-staging-v02.api.letsencrypt.org/directory
    email: {{ .Values.global.email | quote }}
    privateKeySecretRef:
      name: letsencrypt-staging
    solvers:
    - dns01:
       route53:
         region: {{ .Values.global.awsRegion }}
---
apiVersion: certmanager.k8s.io/v1alpha1
kind: Issuer
metadata:
  name: letsencrypt-production
  namespace: {{ $release }}
spec:
  acme:
    server: https://acme-v02.api.letsencrypt.org/directory
    email: {{ .Values.global.email | quote }}
    privateKeySecretRef:
      name: letsencrypt-production
    solvers:
    - dns01:
       route53:
         region: {{ .Values.global.awsRegion }}
{{ if .Values.global.hosts.https }}
{{ $spec := .Values.global.hosts.https }}
--- #file: {{ $spec.commonName }}-certificate.yaml
apiVersion: certmanager.k8s.io/v1alpha1
kind: Certificate
metadata:
  name: {{ $spec.commonName }}
  namespace: {{ $.Release.Namespace }}
spec:
  secretName: {{ $spec.secretName }}
  issuerRef:
    name: {{ .Values.global.certificateIssuer }}
    kind: Issuer
  commonName: {{ $spec.commonName }}
  dnsNames:
  {{- $spec.dnsNames | toYaml | nindent 2 -}}
  acme:
    config:
    - dns01:
        provider: route53
      domains:
{{- if $spec.domains -}}
      {{- $spec.domains | toYaml | nindent 6 -}}
{{- else }}
      {{- $spec.dnsNames | toYaml | nindent 6 -}}
{{- end }}
{{ end }}
{{ end }}
