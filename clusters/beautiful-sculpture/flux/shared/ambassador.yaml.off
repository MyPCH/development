apiVersion: flux.weave.works/v1beta1
kind: HelmRelease
metadata:
  name: ambassador
  namespace: default
  annotations:
    flux.weave.works/automated: "false"
spec:
  chart:
    #git: git@github.com:helm/charts
    #path: stable/ambassador
    #ref: master
    repository: https://kubernetes-charts.storage.googleapis.com/
    name: ambassador
    version: 2.6.0
  values:
    fullnameOverride: ambassador
    replicaCount: 2
    prometheusExporter:
      enabled: true
    service:
      type: ClusterIP
      http:
        port: 80
        enabled: true
      https:
        port: 443
        enabled: true
      securityContext:
        runAsNonRoot: false
      annotations:
        sidecar.istio.io/inject: "false"
